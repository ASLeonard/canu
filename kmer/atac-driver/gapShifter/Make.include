# -*- makefile -*-

LIBUTL/     :=$(call MakePath,$/../../libutil/)
LIBBIO/     :=$(call MakePath,$/../../libbio/)
LIBATAC/    :=$(call MakePath,$/../libatac/)

$/.CXX_EXES := $/gapShifter    $/extractUnmapped   $/coalesceMatches   $/correctGaps   $/testAtac
$/.CXX_SRCS := $/gapShifter.C  $/extractUnmapped.C $/coalesceMatches.C $/correctGaps.C $/testAtac.C

$/.CLEAN :=$/*.o $/*~ $/core

$/gapShifter:          $/gapShifter.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a
$/extractUnmapped:     $/extractUnmapped.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a
$/coalesceMatches:     $/coalesceMatches.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a
$/correctGaps:         $/correctGaps.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a
$/testAtac:            $/testAtac.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a

$(eval $/%.d $/%.o:   CXXFLAGS+=-I${LIBATAC/} -I${LIBBIO/} -I${LIBUTL/})
