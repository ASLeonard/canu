# -*- makefile -*-

LIBUTL/     :=$(call MakePath,$/../../libutil/)
LIBBIO/     :=$(call MakePath,$/../../libbio/)
LIBATAC/    :=$(call MakePath,$/../libatac/)

$/.CXX_EXES := $/gapShifter
$/.CXX_SRCS := $/gapShifter.C

$/.CLEAN :=$/*.o $/*~ $/core

$/gapShifter:          $/gapShifter.o \
                       ${LIBATAC/}libatac.a ${LIBBIO/}libbio.a ${LIBUTL/}libutil.a

$(eval $/%.d $/%.o:   CXXFLAGS+=-I${LIBATAC/} -I${LIBBIO/} -I${LIBUTL/})
