# -*- makefile -*-

# this is kind of a hack makefile which looks for the build
# directory and then executes the  makefile there with a
# warning.

build:=$(shell while [ `pwd` != "/" -a ! -d build ] ; do \
                 cd .. ; \
               done ; \
               echo `pwd` )

ifeq (${build},/)
  $(error Unable to find the build directory cds/IR/build)
endif
  

MAKEFILE/ :=${build}/build/

$(warning ***Relocating the build to ${MAKEFILE/}***)

include ${MAKEFILE/}Makefile
