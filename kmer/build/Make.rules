# -*- makefile -*-

# rules for LATEX
%.dvi: %.tex
	${LATEX} $< && ${LATEX} $<

%.aux: %.tex
	${LATEX} $< && ${LATEX} $<

%.bbl: %.aux
	${BIBTEX} ${<:.aux=}

## Shared targets
ALL_DVIPS   :=$(strip $(foreach x,${//},${${x:.=.DVIPS}}))

${ALL_DVIPS}: %.ps :%.dvi
	${DVIPS} -o $@ $<

# some extra goodies
${ALL_DVIPS:.ps=.gv}: %.gv: %.ps
	${VIEWPS} $<

${ALL_DVIPS:.ps=.print}: %.print: %.ps
	${PRINTPS} $<


__SUBGOALS__+=$${${1:.=.DVIPS}}

